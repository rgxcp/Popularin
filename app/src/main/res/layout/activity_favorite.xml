<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FavoriteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_af_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_back"
        app:title="Favorit"
        app:titleTextColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/progress_bar_af_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_af_layout"
        android:padding="168dp" />

    <TextView
        android:id="@+id/text_af_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_af_layout"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="UH OH! \n Seperti padang pasir disini"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_af_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_af_layout"
        android:visibility="gone" />

</RelativeLayout>