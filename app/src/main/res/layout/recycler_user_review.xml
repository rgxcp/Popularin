<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_rur_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_medium"
            android:maxLength="25"
            android:textColor="@color/colorOnBackground"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/text_rur_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/jost_light"
            android:textColor="@color/colorOnBackground"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_rur_star"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_star_50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shape_roundRect_borderColor="@color/colorPrimary"
            app:shape_roundRect_borderWidth="0.1dp"
            app:shape_roundRect_bottomLeftRadius="5dp"
            app:shape_roundRect_bottomRightRadius="5dp"
            app:shape_roundRect_topLeftRadius="5dp"
            app:shape_roundRect_topRightRadius="5dp">

            <ImageView
                android:id="@+id/image_rur_poster"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@color/colorSurface"
                android:contentDescription="@null" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:id="@+id/text_rur_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/jost_light"
            android:maxLines="7"
            android:textColor="@color/colorOnSurface"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_rur_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/jost_extra_light"
        android:textSize="13sp" />

    <View
        android:id="@+id/layout_rur_border"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grayPrimary" />

</LinearLayout>