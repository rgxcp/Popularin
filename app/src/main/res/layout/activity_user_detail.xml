<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_aud_anchor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_aud_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_back"
        app:title="Profile"
        app:titleTextColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/pbr_aud_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_aud_layout"
        android:padding="168dp" />

    <TextView
        android:id="@+id/text_aud_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_aud_layout"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/empty_result"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scroll_aud_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_aud_layout"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">

            <LinearLayout
                android:id="@+id/linear_profile_aud_anchor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/sov_aud_anchor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_aud_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:contentDescription="@null"
                        android:src="@color/colorPrimary" />
                </com.github.florent37.shapeofview.shapes.CircleView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_aud_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/text_aud_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_metadata_aud_anchor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_profile_aud_anchor"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_aud_total_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/review"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_aud_total_follower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/follower"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_aud_total_following"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/following"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_aud_total_favorite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/favorite"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_aud_total_watchlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/watchlist"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text_aud_follow_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_metadata_aud_anchor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/follow_me"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_aud_follow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/text_aud_follow_me"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorPrimary"
                android:text="@string/follow"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/text_latest_favorite_aud_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_aud_follow"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/latest_favorite"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_empty_latest_favorite_aud_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/text_latest_favorite_aud_anchor"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:text="@string/empty_result"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_latest_favorite_aud_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/text_latest_favorite_aud_anchor"
                android:layout_marginTop="8dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_latest_review_aud_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycler_latest_favorite_aud_layout"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/latest_review"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_empty_latest_review_aud_layout"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:layout_below="@id/text_latest_review_aud_anchor"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:text="@string/empty_result"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_latest_review_aud_layout"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:layout_below="@id/text_latest_review_aud_anchor"
                android:layout_marginTop="8dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_rating_aud_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycler_latest_review_aud_layout"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/rating"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_rating_aud_anchor"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/text_aud_rate_05"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_aud_rate_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_aud_rate_15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_aud_rate_20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_aud_rate_25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_aud_rate_30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_aud_rate_35"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_aud_rate_40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_aud_rate_45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_aud_rate_50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>