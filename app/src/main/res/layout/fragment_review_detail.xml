<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_frd_anchor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackPrimary">

    <ProgressBar
        android:id="@+id/pbr_frd_layout"
        style="@style/ProgressBarPrimary" />

    <include
        android:id="@+id/layout_frd_not_found"
        layout="@layout/reusable_not_found"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scroll_frd_anchor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <RelativeLayout
                android:id="@+id/layout_frd_user_anchor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/sov_frd_poster_anchor">

                <com.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/sov_frd_profile_anchor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_frd_profile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@null"
                        android:src="@color/colorPrimary" />
                </com.github.florent37.shapeofview.shapes.CircleView>

                <TextView
                    android:id="@+id/text_frd_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/sov_frd_profile_anchor"
                    android:ellipsize="end"
                    android:fontFamily="@font/jost_regular"
                    android:maxLines="1"
                    android:textColor="@color/whitePrimary"
                    android:textSize="15sp" />
            </RelativeLayout>

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/sov_frd_poster_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:shape_roundRect_borderColor="@color/colorPrimary"
                app:shape_roundRect_borderWidth="0.1dp"
                app:shape_roundRect_bottomLeftRadius="5dp"
                app:shape_roundRect_bottomRightRadius="5dp"
                app:shape_roundRect_topLeftRadius="5dp"
                app:shape_roundRect_topRightRadius="5dp">

                <ImageView
                    android:id="@+id/image_frd_poster"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:contentDescription="@null"
                    android:src="@color/colorPrimary" />
            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <LinearLayout
                android:id="@+id/layout_frd_film_anchor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_frd_user_anchor"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/sov_frd_poster_anchor"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_frd_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/jost_medium"
                    android:maxLength="25"
                    android:textColor="@color/whitePrimary"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/text_frd_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/jost_light"
                    android:textColor="@color/whitePrimary"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_frd_star"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@id/layout_frd_film_anchor"
                android:layout_marginTop="8dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_50" />

            <TextView
                android:id="@+id/text_frd_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_frd_star"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/sov_frd_poster_anchor"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/whitePrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_frd_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sov_frd_poster_anchor"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/jost_regular"
                android:textColor="@color/whitePrimary"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_frd_detail"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_frd_like"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_favorite_outline" />

                <TextView
                    android:id="@+id/text_frd_like_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/jost_regular"
                    android:text="@string/like"
                    android:textColor="@color/whitePrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text_frd_total_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/jost_light"
                    android:textColor="@color/whitePrimary"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>