<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anchor_frc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReviewActivity">

    <ProgressBar
        android:id="@+id/pbr_frc_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/comment_frc_layout"
        android:padding="168dp" />

    <TextView
        android:id="@+id/text_frc_empty_result"
        style="@style/TextMessagePrimary"
        android:layout_above="@id/comment_frc_layout"
        android:text="@string/empty_comment"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_frc_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/comment_frc_layout"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/comment_frc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_frc_comment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:autofillHints="@null"
            android:background="@drawable/bg_circle_gray"
            android:fontFamily="@font/jost_regular"
            android:hint="@string/input_comment"
            android:inputType="textShortMessage"
            android:paddingHorizontal="16dp"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/image_fr_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_send" />
    </LinearLayout>

</RelativeLayout>